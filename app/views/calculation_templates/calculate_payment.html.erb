<h1>
  Payment Results
</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= sprintf('%.4f', @rate) %>%
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @years.to_i.to_s %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= @pv.to_s(:currency) %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= @payment.to_s(:currency) %>
  </dd>
</dl>

<a href="/payment/new">
  Calculate another payment
</a>
